{
	"name": "vscode-linkerd",
	"displayName": "vscode-linkerd",
	"description": "linkerd for fun and profit",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.32.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:vslinkerd.install",
		"onCommand:vslinkerd.check"
	],
	"extensionDependencies": [
		"ms-kubernetes-tools.vscode-kubernetes-tools"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "vslinkerd.install",
				"title": "Install Linkerd"
			},
			{
				"command": "vslinkerd.check",
				"title": "Check Linkerd"
			}
		],
		"menus": {
			"view/item/context": [
				{
					"command": "vslinkerd.install",
					"when": "view == extension.vsKubernetesExplorer && viewItem =~ /^vsKubernetes\\.\\w*cluster$/i",
					"group": "8"
				},
				{
					"command": "vslinkerd.check",
					"when": "view == extension.vsKubernetesExplorer && viewItem =~ /^vsKubernetes\\.\\w*cluster$/i",
					"group": "8"
				}
			]
		},
		"configuration": {
			"title": "VSCode Linkerd",
			"properties": {
				"vscode-linkerd": {
					"type": "object",
					"description": "VSCode Linkerd Configuration",
					"properties": {
						"linkerd-path": {
							"type": "string",
							"description": "File path to a Linkerd binary"
						},
						"linkerd-namespace": {
							"type": "string",
							"description": "Namespace for Linkerd",
							"default": "linkerd"
						}
					}
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "npm run compile && node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"@types/mocha": "^2.2.42",
		"@types/node": "^10.12.21",
		"@types/shelljs": "^0.8.3",
		"tslint": "^5.12.1",
		"typescript": "^3.3.1",
		"vscode": "^1.1.28"
	},
	"dependencies": {
		"@types/json2md": "^1.5.0",
		"@types/tmp": "^0.1.0",
		"deep-object-diff": "^1.1.0",
		"json2md": "^1.6.3",
		"shelljs": "^0.8.3",
		"tmp-promise": "^1.0.5",
		"vscode-kubernetes-tools-api": "0.0.2"
	}
}
